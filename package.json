{
  "name": "@samhwang/vite-react-starter-template",
  "version": "1.0.0",
  "description": "Vite + React Starter Template",
  "msw": {
    "workerDirectory": ["public"]
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "pnpm": "^8.0.0"
  },
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "prepare": "pnpm run githooks:init",
    "githooks:init": "simple-git-hooks",
    "msw:init": "msw init public --save",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:CI": "pnpm run test && pnpm run typecheck",
    "test:preview": "vitest-preview",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "lint:fix:unsafe": "biome check --apply-unsafe .",
    "format": "biome format --write .",
    "ci": "biome ci ."
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm run ci && pnpm run test:run"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["biome check --apply", "biome format --write"]
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@tanstack/react-router": "^1.26.16",
    "@tanstack/router-devtools": "^1.26.16",
    "lint-staged": "^15.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.2",
    "simple-git-hooks": "^2.11.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.4",
    "@tanstack/router-cli": "^1.26.16",
    "@tanstack/router-vite-plugin": "^1.26.16",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.12.5",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "jsdom": "^24.0.0",
    "msw": "^2.2.13",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vitest": "^1.4.0",
    "vitest-preview": "^0.0.1"
  }
}
